    <body>
        {{>header}}
        <div class="container-cover">
            <div class="cover">
                <i class="fas fa-cloud-sun-rain"></i>
                <h1>Get all weather information Quick and easy</h1>
                
                <a class="btn-get-started" href="/weather">Get Started</a>
